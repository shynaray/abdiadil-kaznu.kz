public class Человек {
    private String name; // Имя человека
    private String currentTransport; // Текущий транспорт

    // Конструктор
    public Человек(String name, String currentTransport) {
        this.name = name;
        this.currentTransport = currentTransport;
    }

    // Геттер для имени
    public String getName() {
        return name;
    }

    // Сеттер для имени
    public void setName(String name) {
        this.name = name;
    }

    // Геттер для текущего транспорта
    public String getCurrentTransport() {
        return currentTransport;
    }

    // Сеттер для текущего транспорта
    public void setCurrentTransport(String currentTransport) {
        this.currentTransport = currentTransport;
    }

    // Метод для отображения информации о человеке
    public void displayInfo() {
        System.out.println("Имя: " + name);
        System.out.println("Текущий транспорт: " + currentTransport);
    }
}
