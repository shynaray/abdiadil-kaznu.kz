Человек.java

public class Человек {
    private String name;
    private String currentTransport;

    public Человек(String name, String currentTransport) {
        this.name = name;
        this.currentTransport = currentTransport;
    }

    public void displayInfo() {
        System.out.println("Имя: " + name + ", Транспорт: " + currentTransport);
    }

    public void setCurrentTransport(String transport) {
        this.currentTransport = transport;
    }
}


Main.java

public class Main {
    public static void main(String[] args) {
        Человек человек = new Человек("Иван", "Автомобиль");
        человек.displayInfo();
        человек.setCurrentTransport("Велосипед");
        человек.displayInfo();
    }
}
